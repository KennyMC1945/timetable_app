<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_header"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/table_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22000003" />

    <View
        android:id="@+id/view_body"
        android:layout_width="0dp"
        android:layout_height="221dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/table_body"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_header"
        app:layout_constraintVertical_bias="0.0">



    </View>


    <LinearLayout
        android:id="@+id/ll_table"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="@+id/view_body"
        app:layout_constraintStart_toStartOf="@+id/view_body"
        app:layout_constraintTop_toTopOf="@+id/view_body"
        app:layout_constraintBottom_toBottomOf="@+id/view_body">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="@drawable/divider_vert"
            android:showDividers="middle"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_firstType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/practice_icon"
                android:text="ПР"
                android:enabled="false"
                android:gravity="center"
                android:inputType="none|textNoSuggestions"
                android:textAlignment="gravity"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_secondType"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom ="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/lab_icon"
                android:text="ЛР"
                android:enabled="false"
                android:gravity="center"
                android:inputType="none|textNoSuggestions"
                android:textAlignment="gravity"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_thirdType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/practice_icon"
                android:text="ПР"
                android:enabled="false"
                android:gravity="center"
                android:inputType="none|textNoSuggestions"
                android:textAlignment="gravity"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_fourthType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/lection_icon"
                android:text="ЛК"
                android:enabled="false"
                android:gravity="center"
                android:inputType="none|textNoSuggestions"
                android:textAlignment="gravity"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_fifthType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/lection_icon"
                android:text="ЛК"
                android:enabled="false"
                android:gravity="center"
                android:inputType="none|textNoSuggestions"
                android:textAlignment="gravity"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:visibility="visible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:divider="@drawable/divider_vert"
            android:showDividers="middle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_firstLesson"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Первая пара" />

            <TextView
                android:id="@+id/tv_secondLesson"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Вторая пара" />
            <TextView
                android:id="@+id/tv_thirdLesson"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Третья пара"
                />

            <TextView
                android:id="@+id/tv_fourthLesson"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Четвертая пара" />
            <TextView
                android:id="@+id/tv_fifthLesson"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Пятая пара" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:divider="@drawable/divider_vert"
            android:showDividers="middle"
            android:layout_weight="0.9">
            <TextView
                android:id="@+id/tv_firstAud"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="А-103" />

            <TextView
                android:id="@+id/tv_secondAud"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Л-208" />
            <TextView
                android:id="@+id/tv_thirdAud"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Л-413" />

            <TextView
                android:id="@+id/tv_fourthAud"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="А-404" />
            <TextView
                android:id="@+id/tv_fifthAud"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="А-301" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weekday"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/view_header"
        app:layout_constraintEnd_toEndOf="@+id/view_header"
        app:layout_constraintStart_toStartOf="@+id/view_header"
        app:layout_constraintTop_toTopOf="@+id/view_header" />


</androidx.constraintlayout.widget.ConstraintLayout>